<header>
    <% if user_signed_in? %>
    <div class="headerone">

            <div>
                <p><i class="fa-solid fa-bars fa-beat fa-2xl"></i></p>
                <p class="fs-3">
                <% if current_page?(groups_path) %>
                Categories
                <% else %>
                Transactions
                <% end %>
                </p>
                <p><i class="fa-solid fa-magnifying-glass fa-2xl"></i></p>
            </div>



            <div>
  <% if current_page?(groups_path) || current_page?(root_path) %>
    <p>
      <%= link_to "New group", new_group_path, class: "new" %>
    </p>
  <% else %>
    <% if request.path =~ /\/groups\/\d+\/products\/new/ %>
      <% parent_group_path = request.path.split("/")[0..2].join("/") %>
      <%= link_to parent_group_path, class: "wider" do %>
        <p><i class="fa-solid fa-chevron-left"></i></p>
      <% end %>
    <% else %>
      <%= link_to groups_path, class: "wider" do %>
        <p><i class="fa-solid fa-chevron-left"></i></p>
      <% end %>
    <% end %>
    <p><%= link_to "Home", groups_path, class: "new" %></p>
  <% end %>
  <p>Most recent</p>
  <p>
    <%= button_to "sign out", destroy_user_session_path, method: :delete, data: { turbo_confirm: "Are you sure to end your session?" }, class: "out" %>
  </p>
</div>




            <div class="thin"><i class="fa-solid fa-circle"></i></div>
        </div>

        <div class="headertwo">
            <p>Gift credit</p>
            <p>$45.00</p>
        </div>

    <% end %>
</header>

