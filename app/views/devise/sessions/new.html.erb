
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <% if notice.present? %>
  <p style="color: green; font-size: 0.7em", class="text-center mt-1"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p style="color: red; font-size: 0.7em", class="text-center mt-1"><%= alert %></p>
<% end %>

  <div class="login-head fs-5 mb-3">
  <%= link_to root_path do %>
      &larr;
  <% end %>
      <span>LOGIN</span>
      <%= f.submit "Log in", class: "login btn btn-outline-primary" %>
  </div>
  
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%# f.check_box :remember_me, class: "form-check-input" %>
      <%# f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

    
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
 <p class="mt-3 text-center"> <%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
<% end %>

